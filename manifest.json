{
  "name": "Copy Go Package",
  "version": "0.1.1",
  "description": "Copy the Go package path into clipboard",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/gopher-front-16.png",
      "32": "images/gopher-front-32.png",
      "48": "images/gopher-front-48.png",
      "64": "images/gopher-front-64.png",
      "128": "images/gopher-front-128.png"
    }
  },
  "icons": {
    "16": "images/gopher-front-16.png",
    "32": "images/gopher-front-32.png",
    "48": "images/gopher-front-48.png",
    "64": "images/gopher-front-64.png",
    "128": "images/gopher-front-128.png"
  },
  "manifest_version": 2
}
